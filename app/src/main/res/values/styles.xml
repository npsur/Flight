<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PlanePath">
        <item name="android:dashGap">4dp</item>
        <item name="android:dashWidth">3dp</item>
        <item name="android:color">@color/blue</item>
        <item name="planeIcon">@drawable/ic_plane</item>
    </style>

    <style name="FlightCard">
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="DateSeparatorDecoration">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="SpaceDecoration">
        <item name="android:padding">@dimen/normal_padding</item>
    </style>

    <style name="FlightCard.Divider">
        <item name="android:layout_height">8dp</item>
    </style>
</resources>
